<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <Button
            android:id="@+id/button_goto_shapes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shapes"
            app:layout_constraintBaseline_toBaselineOf="@+id/button_goto_fruits"
            app:layout_constraintEnd_toStartOf="@+id/button_goto_fruits"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/button_goto_fruits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fruits"
            app:layout_constraintBaseline_toBaselineOf="@+id/button_goto_animals"
            app:layout_constraintEnd_toStartOf="@+id/button_goto_animals"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/button_goto_shapes" />

        <Button
            android:id="@+id/button_goto_animals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="107dp"
            android:text="Animals"
            app:layout_constraintEnd_toStartOf="@+id/button_goto_colors"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/button_goto_fruits"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button_goto_colors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Colors"
            app:layout_constraintBaseline_toBaselineOf="@+id/button_goto_animals"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/button_goto_animals" />


        <androidx.compose.ui.platform.ComposeView
            android:id="@+id/segmented_progress_bar"
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="220dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>